def detect_ai(text):
    AI = False

    dash_check = "-"
    par_check = "("
    parend_check = ")"

    word_size_count = 0
    dash_count = 0
    par_count = 0

    words = text.split()

    for word in words:
        if len(word) >= 7:
            word_size_count += 1
        if word == dash_check:
            dash_count += 1
        if word == par_check or word == parend_check:
            par_count += 1


    if word_size_count >= 3 or dash_count >= 2 or par_count >= 4:
        AI = True
    

    if AI == True:
        text = "AI"
    else:
        text = "Human"

    return text
